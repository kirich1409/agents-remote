# === Authentication (choose one) ===

# Option 1: API key (pay-per-token from console.anthropic.com)
ANTHROPIC_API_KEY=

# Option 2: OAuth token (from Claude Pro/Max subscription)
# Extract with: security find-generic-password -a "oauth.claude" -w | python3 -c "import sys,json,base64; d=json.load(sys.stdin); print(json.loads(base64.b64decode(d['data']))['claudeAiOauth']['accessToken'])"
CLAUDE_CODE_OAUTH_TOKEN=

# === Server Configuration ===

# Server port (default: 8080)
GATEWAY_PORT=8080

# Optional: authentication token for API access
AUTH_TOKEN=

# Claude model (default: sonnet)
CLAUDE_MODEL=sonnet

# Log level (default: INFO)
LOG_LEVEL=INFO
