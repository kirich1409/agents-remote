# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.kt]
indent_size = 4
indent_style = space
max_line_length = 120

[*.kts]
indent_size = 4
indent_style = space
max_line_length = 120

[*.{gradle,gradle.kts}]
indent_size = 4
indent_style = space

[*.md]
trim_trailing_whitespace = false
